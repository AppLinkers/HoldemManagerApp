<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_shadow"
    android:minHeight="0dp"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/buttonCon"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="펍 이름 "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/pubName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="펍 이름"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="펍 영업시간"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/pubOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="펍 영업시간"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="펍 게임"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/pubGame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="펍 게임"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="펍 설명"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/pubInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="펍 설명"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="펍 이미지"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/pubImg"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:background="#80E2E2E2"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonCon"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:weightSum="1">
            <Button
                android:id="@+id/info_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="수정"/>

            <Button
                android:id="@+id/info_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="삭제"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/update_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/buttonCon2"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="펍 이름"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/pubName_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="펍 이름"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영업 시간"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/pubOpen_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="영업 시간"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게임"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/pubGame_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="게임"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설명"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/pubInfo_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="설명"
                    android:gravity="center"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="펍 이미지"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/goToGallary_updatePub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앨범에서 찾기"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/info_pub_Img_update"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:background="#80E2E2E2"/>

        </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonCon2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/update_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="수정"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>